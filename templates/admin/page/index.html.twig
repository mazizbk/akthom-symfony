{% extends 'admin/base.html.twig' %}

{% block title %}Page index
{% endblock %}

{% block body %}
	<ul class="breadcrumb">
		<li>Gestion des pages</li>
	</ul>
	<div class="card">

		<div class="card-body">
			<h5 class="card-title">
				<a name="" id="" class="btn btn-primary" href="{{ path('app_page_new') }}" role="button">Ajouter</a>
			</h5>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Titre</th>
							<th>Description</th>
							<th>Status</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for page in pages %}
							<tr>
								<td>{{ page.id }}</td>
								<td>{{ page.title }}</td>
								<td>{{ page.description }}</td>
								<td>{{ page.status ? 'Publié' : 'Non Publié' }}</td>
								<td>
									<div class="btn-group" role="group" aria-label="Basic example">
										<a class="btn btn-info" href="{{ path('app_front_page', {'slug': page.slug}) }}" target="_blank" role="button">Visualiser</a>
										<a class="btn btn-warning" href="{{ path('app_page_edit', {'id': page.id}) }}" role="button">Modifier</a>
										{{ include('admin/page/_delete_form.html.twig') }}

									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">Aucun enregistrement trouvé</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>

		</div>
	</div>


{% endblock %}
