{% extends 'admin/base.html.twig' %}

{% block title %}Page
{% endblock %}

{% block body %}

    <ul class="breadcrumb">
        <li><a href="{{ path('app_page_index') }}">Gestion des pages</a></li>
        <li>Visualiser page</li>
    </ul>
	<div class="clearfix">

		<div class="float-end">
			{{ include('admin/page/_delete_form.html.twig') }}

		</div>
	</div>
	<div class="card">
		<div class="card-header">
			Visuelle du contenu de la page
		</div>
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ page.id }}</td>
					</tr>
					<tr>
						<th>Title</th>
						<td>{{ page.title }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ page.description }}</td>
					</tr>
					<tr>
						<th>Content</th>
						<td>
							{{ page.content|html_to_markdown }}

						</td>
					</tr>
					<tr>
						<th>Status</th>
						<td>{{ page.status ? 'Publié' : 'Non Publié' }}</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="card-footer text-muted">

			<a class="btn btn-warning" href="{{ path('app_page_edit', {'id': page.id}) }}">modifier</a>

		</div>
	</div>


{% endblock %}
