{% extends 'admin/base.html.twig' %}

{% block title %}Menu index
{% endblock %}

{% block body %}
	<ul class="breadcrumb">
		<li>Gestion des menus</li>
	</ul>
	<div class="card">

		<div class="card-body">
			<h5 class="card-title">
				<a name="" id="" class="btn btn-primary" href="{{ path('app_menu_new') }}" role="button">Ajouter</a>
			</h5>
			<div class="table-responsive">

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Label</th>
							<th>Description</th>
							<th>Parent_id</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for menu in menus %}
							<tr>
								<td>{{ menu.id }}</td>
								<td>{{ menu.label }}</td>
								<td>{{ menu.description }}</td>
								<td>{{ menu.parentId }}</td>
								<td>
									<div class="btn-group" role="group" aria-label="Basic example">


										<a class="btn btn-warning" href="{{ path('app_menu_edit', {'id': menu.id}) }}" role="button">Modifier</a>
										{{ include('admin/menu/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">Aucun enregistrement trouv√©</td>

							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
